<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:layout_marginHorizontal">50dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="backgroundTint">@color/bgbutton</item>
    </style>
    <style name="InputFieldStyle">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:layout_marginHorizontal">50dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#686777</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="titlenavbar">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundColor">@color/white</item>
    </style>
</resources>